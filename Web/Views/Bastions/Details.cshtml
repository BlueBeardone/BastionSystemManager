@* BastionsOfMaura.Web/Views/Bastions/Details.cshtml *@
@model BastionDetailsViewModel

<div class="container">
    <h2>@Model.Bastion.Name</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Bastion Overview</h5>
                </div>
                <div class="card-body">
                    <p><strong>Rank:</strong> @Model.Bastion.Rank</p>
                    <p><strong>Gold:</strong> @Model.Bastion.Gold</p>
                    <p><strong>Facilities:</strong> @Model.Bastion.Facilities.Count</p>
                    <p><strong>Hirelings:</strong> @Model.Bastion.Hirelings.Count</p>
                </div>
            </div>
            
            <div class="mt-3">
                <form asp-action="ProcessMonthlyTurn" method="post">
                    <input type="hidden" name="bastionId" value="@Model.Bastion.Id" />
                    <button type="submit" class="btn btn-primary">Process Monthly Turn</button>
                </form>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Facilities</h5>
                </div>
                <div class="card-body">
                    @foreach (var facility in Model.Bastion.Facilities)
                    {
                        <div class="facility-item mb-2 p-2 border rounded">
                            <h6>@facility.Name</h6>
                            <small class="text-muted">
                                @facility.Rank - @facility.Size
                                @if (facility.IsUnderConstruction)
                                {
                                    <span class="badge bg-warning">Under Construction: @facility.ConstructionProgress/@facility.ConstructionTimeRequired</span>
                                }
                            </small>
                        </div>
                    }
                    
                    @if (Model.CanBuildBasic)
                    {
                        <div class="mt-3">
                            <h6>Build Basic Facility</h6>
                            <form asp-action="BuildFacility" method="post">
                                <input type="hidden" name="bastionId" value="@Model.Bastion.Id" />
                                <input type="hidden" name="facilityType" value="Basic" />
                                <select name="facilityName" class="form-select">
                                    @foreach (var facility in Model.AvailableBasicFacilities)
                                    {
                                        <option value="@facility">@facility</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-success mt-2">Build</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>